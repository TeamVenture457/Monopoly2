<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="venture.cs414.android.monopoly2.frontend.BuyHouse"
    tools:showIn="@layout/activity_buy_house">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose the property you want to purchase a house for."
        android:id="@+id/PlayerInstructionsLabelBuyHouse"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy House"
        android:id="@+id/ButtonBuyBuyHouse"
        android:layout_marginTop="38dp"
        android:onClick="clickBuyButtonBuyHouse"
        android:layout_below="@+id/SelectPropertyDropdownBuyHouse"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/ButtonCancelBuyHouse"
        android:onClick="clickCancelButtonBuyHouse"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SelectPropertyDropdownBuyHouse"
        android:layout_below="@+id/PlayerInstructionsLabelBuyHouse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:spinnerMode="dropdown" />


</RelativeLayout>
