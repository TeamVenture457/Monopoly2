        android:layout_height="wrap_content"
        android:text="All Player Information"
        android:id="@+id/AllPlayerInfoLabel"
        android:layout_below="@+id/CurrentTurnInfoField"
        android:layout_alignRight="@+id/CurrentTurnInfoField"
        android:layout_alignEnd="@+id/CurrentTurnInfoField"
