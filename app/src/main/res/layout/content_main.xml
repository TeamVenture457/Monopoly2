        android:layout_height="wrap_content"
        android:text="Current Player Information"
        android:id="@+id/CurrentPlayerInfoLabel"
        android:layout_below="@+id/CurrentTurnInfoField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="false"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:text="Current Player Information will display here."
        android:id="@+id/CurrentPlayerInfoField"
        android:layout_below="@+id/CurrentPlayerInfoLabel"
        android:layout_alignRight="@+id/CurrentPlayerInfoLabel"
        android:layout_alignEnd="@+id/CurrentPlayerInfoLabel" />

    <TextView
