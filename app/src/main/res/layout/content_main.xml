<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/contentMain"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".frontend.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Turn Information"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/CurrentTurnLabel"
        android:editable="false"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/CurrentTurnInfoField"
        android:layout_below="@+id/CurrentTurnLabel"
        android:text="Current turn information will display here."
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="false"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Current Player Information"
        android:id="@+id/CurrentPlayerInfoLabel"
        android:layout_below="@+id/CurrentTurnInfoField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:text="Current Player Information will display here."
        android:id="@+id/CurrentPlayerInfoField"
        android:layout_below="@+id/CurrentPlayerInfoLabel"
        android:layout_alignRight="@+id/CurrentPlayerInfoLabel"
        android:layout_alignEnd="@+id/CurrentPlayerInfoLabel" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="All Player Information"
        android:id="@+id/AllPlayerInfoLabel"
        android:layout_below="@+id/CurrentTurnInfoField"
        android:layout_alignRight="@+id/CurrentTurnInfoField"
        android:layout_alignEnd="@+id/CurrentTurnInfoField"
        android:editable="false"/>

    <TextView
        android:layout_width="148dp"
        android:layout_height="75dp"
        android:text="All Player Information will display here."
        android:id="@+id/AllPlayerInfoField"
        android:layout_below="@+id/CurrentPlayerInfoLabel"
        android:layout_toRightOf="@+id/CurrentPlayerInfoLabel"
        android:layout_toEndOf="@+id/CurrentPlayerInfoLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timerText"/>

</RelativeLayout>
